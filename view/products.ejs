            <th scope="col">price</th>
            <th scope="col">category</th>
            <th scope="col"> delete</th>
          </tr>
        </thead>
        <tbody>
          <% products.map((ele)=>{ %>
          <tr>
            <td><%= ele.title %></td>
            <td><img src="/<%= ele.img %>" alt="" width="50px" /></td>
            <td><%= ele.price %></td>
            <td><%= ele.category %></td>
            <th><a href="/product/<%= ele.id %>">delete</a></th>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
